<?xml version="1.0"?>
<tool id="ncbi_taxonomy_fetcher" name="NCBI" tool_type="manage_data" version="1.0.0">
    <description>taxonomy downloader</description>
    <stdio>
        <exit_code description="Error" level="fatal" range="1:" />
    </stdio>
    <command>
    <![CDATA[
        curl -o taxdump.tar.gz ${taxonomy_url} && tar xzf taxdump.tar.gz && python $__tool_directory__/data_manager.py --name "${database_name}" --out "${out_file}"
    ]]>
    </command>
    <inputs>
        <param label="Name for this database" name="database_name" type="text" />
        <param label="Enter URL for taxonomy files" name="taxonomy_url" type="text" value="ftp://ftp.ncbi.nih.gov/pub/taxonomy/taxdump.tar.gz" />
    </inputs>
    <outputs>
        <data format="data_manager_json" name="out_file" />
    </outputs>
</tool>
